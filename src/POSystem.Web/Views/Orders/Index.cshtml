@model IEnumerable<POSystem.Domain.Entities.Order>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="mt-3">
        <h3 class="text-center">ORDER LIST</h3>
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        REF. ID
                    </th>
                    <th>
                        PO NO
                    </th>
                    <th>
                        PO DATE
                    </th>
                    <th>
                        SUPPLIER
                    </th>
                    <th>
                        EX.DATE
                    </th>
                    <th>
                        EDIT
                    </th>
                    <th>
                        DELETE
                    </th>
                    <th>
                        EXPORT
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => order.ReferenceId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => order.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => order.PlacedAtUtc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => order.SupplierId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => order.ExpectedDate)
                        </td>
                        <td>
                            EDIT ICON
                        </td>
                        <td>
                            DELETE ICON
                        </td>
                        <td>
                            EXPORT ICON
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
