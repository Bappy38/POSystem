@model IEnumerable<POSystem.Domain.DTOs.GetOrderDto>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h3 class="text-center pt-4">ORDER LIST</h3>
    <div class="row pt-2">
        <div class="col-8">
            <a asp-controller="Orders" asp-action="Create" class="btn btn-primary fw-semibold">
                Create
                &nbsp;
                <i class="bi bi-plus-circle"></i>
            </a>
        </div>
        
        <div class="col-4 text-end">
            <form class="d-flex">
                <input class="form-control me-sm-2" type="search" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </div>
    <div class="pt-4">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        REF. ID
                    </th>
                    <th>
                        PO NO
                    </th>
                    <th>
                        PO DATE
                    </th>
                    <th>
                        SUPPLIER
                    </th>
                    <th>
                        EX.DATE
                    </th>
                    <th>
                        EDIT
                    </th>
                    <th>
                        DELETE
                    </th>
                    <th>
                        EXPORT
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr class="table-primary">
                        <td>
                            @Html.DisplayFor(modelItem => order.ReferenceId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => order.PurchaseOrderNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => order.PlacedAtUtc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => order.SupplierId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => order.ExpectedDate)
                        </td>
                        <td>
                            <a asp-controller="Orders" asp-action="Edit" asp-route-id="@order.Id"><i class="bi bi-pencil-square"></i></a>
                        </td>
                        <td>
                            <a asp-controller="Orders" asp-action="Delete" asp-route-id="@order.Id"><i class="bi bi-trash3"></i></a>
                        </td>
                        <td>
                            <i class="bi bi-box-arrow-in-down"></i>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-5 row">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link" href="#">&laquo;</a>
            </li>
            <li class="page-item active">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">4</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">5</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">&raquo;</a>
            </li>
        </ul>
    </div>
</div>
