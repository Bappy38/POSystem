@model POSystem.Domain.DTOs.CreateOrderDto

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h4 class="pt-4">Purchase Order Entry Form</h4>
    <hr />

    <div>
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="row">
                <div class="form-group col-4">
                    <fieldset>
                        <label asp-for="ReferenceId" class="form-label">REF. ID</label>
                        <input asp-for="ReferenceId" class="form-control" type="text" placeholder="Reference ID">
                        <span asp-validation-for="ReferenceId" class="text-danger"></span>
                    </fieldset>
                </div>
                <div class="col-4"></div>
                <div class="form-group col-4">
                    <label asp-for="ReferenceId" class="form-label">PO. NO</label>
                    <input asp-for="ReferenceId" class="form-control" type="text" placeholder="Purchase Order No">
                    <span asp-validation-for="ReferenceId" class="text-danger"></span>
                </div>
            </div>

            <div class="row pt-2">
                <div class="form-group col-4">
                    <label asp-for="PlacedAtUtc" class="form-label">PO DATE</label>
                    <input asp-for="PlacedAtUtc" id="PlacedAtUtc" class="form-control" type="date" readonly>
                    <span asp-validation-for="PlacedAtUtc" class="text-danger"></span>
                </div>
                <div class="col-4"></div>
                <div class="form-group col-4">
                    <label asp-for="SupplierId" class="form-label">Supplier</label>
                    <input asp-for="SupplierId" class="form-control" type="text" placeholder="Supplier">
                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                </div>
            </div>

            <div class="row pt-2">
                <div class="form-group col-4">
                    <label asp-for="ExpectedDate" class="form-label">Expected Date</label>
                    <input asp-for="ExpectedDate" class="form-control" type="date">
                    <span asp-validation-for="ExpectedDate" class="text-danger"></span>
                </div>
                <div class="col-4"></div>
                <div class="form-group col-4">
                    <label asp-for="Remark" class="form-label">Remark</label>
                    <input asp-for="Remark" class="form-control" placeholder="Remark" />
                    <span asp-validation-for="Remark" class="text-danger"></span>
                </div>
            </div>

            <hr>

            <div class="row align-items-end">
                <div class="form-group col-3">
                    <label for="itemName" class="form-label">Item Name</label>
                    <input for="itemName" id="itemName" type="text" class="form-control" placeholder="Item Name" />
                    <span asp-validation-for="Remark" class="text-danger"></span>
                </div>

                <div class="form-group col-3">
                    <label for="itemQuantity" class="form-label">Quantity</label>
                    <input for="itemQuantity" id="itemQuantity" type="number" class="form-control" placeholder="Quantity" />
                    <span asp-validation-for="Remark" class="text-danger"></span>
                </div>

                <div class="form-group col-3">
                    <label for="itemRate" class="form-label">Rate</label>
                    <input for="itemRate" id="itemRate" type="number" class="form-control" placeholder="Rate" />
                    <span asp-validation-for="Remark" class="text-danger"></span>
                </div>

                <div class="col-3">
                    <button type="button" id="addItemButton" class="mt-3 btn btn-primary">
                        <i class="bi bi-plus-circle"></i>
                    </button>
                </div>
            </div>

            <div class="pt-4">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                ITEM NAME
                            </th>
                            <th>
                                QTY
                            </th>
                            <th>
                                RATE ($)
                            </th>
                            <th>
                                EDIT
                            </th>
                            <th>
                                DELETE
                            </th>
                        </tr>
                    </thead>
                    <tbody id="itemsTableBody">
                        @if (Model?.Items is not null)
                        {
                            @foreach (var item in Model.Items)
                            {
                                <tr class="table-primary">
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Quantity
                                    </td>
                                    <td>
                                        @item.Rate
                                    </td>
                                    <td>
                                        <i class="bi bi-pencil-square"></i>
                                    </td>
                                    <td>
                                        <i class="bi bi-trash3"></i>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="pt-3 text-end">
                <button type="submit" class="btn btn-primary" style="width: 120px">Create</button>

                <a asp-controller="Orders" asp-action="Index" class="btn btn-secondary" style="width: 120px">Back to List</a>
            </div>

            <script>
                document.addEventListener('DOMContentLoaded', (e) => {
                    document.getElementById('PlacedAtUtc').value = new Date().toISOString().split('T')[0];

                    document.getElementById('addItemButton').addEventListener('click', (event) => {
                        event.preventDefault();

                        let itemName = document.getElementById('itemName').value;
                        let itemQuantity = document.getElementById('itemQuantity').value;
                        let itemRate = document.getElementById('itemRate').value;

                        if (itemName && itemQuantity && itemRate) {
                            let tableBody = document.getElementById('itemsTableBody');
                            let newRow = document.createElement('tr');
                            newRow.classList.add('table-primary');
                            // newRow.innerHTML = `
                            //             <td>${itemName}</td>
                            //             <td>${itemQuantity}</td>
                            //             <td>${itemRate}</td>
                            //             <td><i class="bi bi-pencil-square"></i></td>
                            //             <td><i class="bi bi-trash3"></i></td>
                            //         `;

                            let rowCount = tableBody.rows.length;
                            newRow.innerHTML = `
                                        <td>
                                            <input type="hidden" name="Items[${rowCount}].Name" value="${itemName}" />
                                            ${itemName}
                                        </td>
                                        <td>
                                            <input type="hidden" name="Items[${rowCount}].Quantity" value="${itemQuantity}" />
                                            ${itemQuantity}
                                        </td>
                                        <td>
                                            <input type="hidden" name="Items[${rowCount}].Rate" value="${itemRate}" />
                                            ${itemRate}
                                        </td>
                                        <td><i class="bi bi-pencil-square"></i></td>
                                        <td><i class="bi bi-trash3"></i></td>
                                    `;
                            tableBody.appendChild(newRow);

                            document.getElementById('itemName').value = '';
                            document.getElementById('itemQuantity').value = '';
                            document.getElementById('itemRate').value = '';
                        }
                    });
                });
            </script>
        </form>
    </div>
</div>

@section Scripts {
    <script>

    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
